.header {
  text-align: center;
  background-color: #ffffff;
  position: relative;
}

.header__container {
  height: 450px;
}

.header__nav {
  display: block;
  margin: 0 auto;
  height: 50px;
  background-color: #ffffff;
  padding: 15px;
  border-bottom: 1px solid #E9E9E9;
}

.header__image {
  background-image: url('<%= image_path 'gorillaz' %>');
  background-position: center;
  background-size: cover;
  height: 280px;
  position: relative;
}

.header__nav-icon {
  display: none;
}

.header__nav-icon img {
  height: 30px;
}

.header__nav-icon--left {
  float: left;
  position: absolute;
  bottom: 5px;
  left: 10px;
}

.header__nav-icon--right {
  float: right;
  position: absolute;
  bottom: 6px;
  right: 10px;
}

.header__padding {
  height: 50px;
  display: none;
}

.header__padding--display-true {
  display: block;
}

.header__line {
  height: 100px;
  border-right: 1px solid #ffffff;
  width: 50%;
}

.header__hashtag {
  font-size: 11px;
  color: #ffffff;
  background-color: rgba(0, 0, 0, 0.3);
  border: 1px solid #ffffff;
  padding: 4px 8px 5px 8px;
}

.header__quote-attribution {
  font-size: 16px;
  margin-top: 20px;
  font-weight: 400;
}

.header__quote-text {
  margin-top: 16px;
  margin-bottom: 15px;
  font-size: 16px;
  line-height: 21px;
}

.header__quote-author {
  font-size: 12px;
  color: #9A9A9A;
}

.header__quote-text b {
  font-weight: 400;
}

.header__nav--sticky { 
  z-index: 9999;
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}

.header__title {
  margin-bottom: 8px;
  font-weight: 400;
}

.top {
    height: 0;
    border-width: 0 0 100px 100vw;
    border-style: solid;
    border-color:transparent #fff #fff transparent;
    position: absolute;
    bottom: -1px;
}
